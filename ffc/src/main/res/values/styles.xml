<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TranslucentStatus">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/teal_300</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">false</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/hint_login_no_activated</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/hint_login</item>
        <item name="colorControlNormal">@color/hint_login_no_activated</item>
        <item name="colorControlActivated">@color/hint_login</item>
    </style>

    <style name="error_appearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/hint_error</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InputError" parent="Widget.Design.TextInputLayout"/>
    <style name="InputError.Purple">
        <item name="android:textColor">@color/purple_500</item>
    </style>

</resources>
